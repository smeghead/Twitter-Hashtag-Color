{
  "name": "Twitter-Hashtag-Color",
  "version": "1.0.2",
  "description": "chagne hashtag color.",
  "icons": { "48": "icon.png" },
  "content_scripts": [
    {
      "matches": [
        "http://twitter.com/",
        "https://twitter.com/",
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background_page": "background.html",
  "options_page": "options.html"
}
