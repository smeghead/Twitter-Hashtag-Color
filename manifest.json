{
  "name": "Twitter-Hashtag-Color",
  "version": "2.0.0",
  "description": "chagne hashtag color.",
  "icons": { "48": "icon.png" },
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "http://twitter.com/",
        "https://twitter.com/",
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html"
}
